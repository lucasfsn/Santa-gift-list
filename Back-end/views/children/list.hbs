{{! <h2>Children list</h2> }}
<ul class='child-list'>
  {{#each childrenList}}
    <hr />
    {{!-- <li>{{this.name}} - {{this.gift}}</li> --}}
    <li>
      <form action="/child/gift/{{this.id}}?_method=PATCH" method="POST">
        <label>
        {{this.name}}
        <select name="giftId">
          <option value=''>Null</option>
          {{#each ../giftsList}}
            <option value='{{this.id}}' {{#if (equals this.id ../giftId)}}selected="selected"{{/if}}>{{this.name}}</option>
          {{/each}}
        </select>
        <button>Save</button>
      </label>
      </form>
    </li>
  {{/each}}
</ul>

<h2>Add a child</h2>
<form action='/child' method='post'>
  <label for=''>Name <input type='text' name='name' /></label>
  <button>Add</button>
</form>